generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(CUSTOMER)
  products  Product[]
  createdAt DateTime @default(now())
}

model Product {
  id       Int    @id @default(autoincrement())
  name     String
  price    Float
  stock    Int
  ownerId  Int
  owner    User   @relation(fields: [ownerId], references: [id])
}

enum Role {
  ADMIN
  STORE
  CUSTOMER
}